{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Notification service for ecommerce-backend-nodejs using Express and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --quiet --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "watch": "concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "express",
    "typescript",
    "nodejs",
    "microservice",
    "notification-service"
  ],
  "author": "Bao Ngo Le Gia and Phuc Nguyen Thien",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/express": "5.0.3",
    "@types/ioredis": "^4.28.10",
    "@types/node": "24.3.0",
    "@types/nodemailer": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "8.8.0",
    "@typescript-eslint/parser": "8.8.0",
    "concurrently": "9.2.1",
    "eslint": "9.9.1",
    "nodemon": "3.1.10",
    "prettier": "3.3.3",
    "ts-node-dev": "2.0.0",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "dotenv": "16.4.5",
    "express": "5.1.0",
    "ioredis": "^5.7.0",
    "nodemailer": "^7.0.6"
  }
}
