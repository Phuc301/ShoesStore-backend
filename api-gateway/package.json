{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for ecommerce-backend-nodejs using Express and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --quiet --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "watch": "concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "express",
    "typescript",
    "nodejs",
    "microservice",
    "api-gateway"
  ],
  "author": "Bao Ngo Le Gia and Phuc Nguyen Thien",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "24.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "8.8.0",
    "@typescript-eslint/parser": "8.8.0",
    "concurrently": "9.2.1",
    "eslint": "9.9.1",
    "nodemon": "3.1.10",
    "prettier": "3.3.3",
    "ts-node-dev": "2.0.0",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "16.4.5",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^13.0.0"
  }
}
